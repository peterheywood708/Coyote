FROM node:24-alpine AS builder
WORKDIR /app
COPY package.json .
RUN npm install
COPY . .
RUN npm run build

FROM busybox:1.37 AS runner
COPY --from=builder /app/dist .
EXPOSE 8080
ENV VITE_S3_ENDPOINT=${VITE_S3_ENDPOINT}
ENV VITE_DB_ENDPOINT=${VITE_DB_ENDPOINT}
ENV VITE_SQS_ENDPOINT=${VITE_SQS_ENDPOINT}
ENV VITE_AWS_CLIENTID=${VITE_AWS_CLIENTID}
ENV VITE_AWS_AUTHORITY=${VITE_AWS_AUTHORITY}
ENV VITE_AWS_REDIRECTURI=${VITE_AWS_REDIRECTURI}
ENV VITE_AWS_COGNITODOMAIN=${VITE_AWS_COGNITODOMAIN}
CMD ["busybox", "httpd", "-f", "-v", "-p", "8080"]

